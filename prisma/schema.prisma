generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Application {
  id          String               @id @default(cuid())
  name        String
  description String
  url         String
  image_url   String
  created_at  DateTime             @default(now())
  is_active   Boolean              @default(false)
  status      Status               @default(pending)
  security    ApplicationSecurity? @relation(fields: [security_id], references: [id])
  security_id String?
}

model ApplicationSecurity {
  id                 String        @id @default(cuid())
  app_id             String        @unique
  public_key         String
  private_key        String
  webhook_is_enabled Boolean
  webhook_url        String
  Application        Application[]
}

enum Status {
  pending
  approved
  rejected
}

model ResetPassword {
  id      String @id @default(cuid())
  app_id  String
  user_id String
  token   String
  iat     BigInt
}
